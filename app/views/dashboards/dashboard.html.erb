<div class="container">

  <div class="dash-bookings-title">
    <h1>Your Dashboard</h1>
  </div>

  <h3>All of My Bookings:</h3>

  <% if @my_bookings.count > 0 %>
    <% @my_bookings.each do  |x| %>

      <div class="row">
        <div class="dash-bookings-content">

          <div class="dash-bookings-info--left col-md-4">
            <p>Boat Name: <%= x.boat.name %></p>
            <p>Total Price: <%= (x.boat.price*(x.end_date - x.start_date)).to_i %></p>
          </div>

          <div class="dash-bookings-info--center col-md-3">
            <p>Start Date: <%= x.start_date %></p>
            <p>End Date: <%= x.end_date %></p>
          </div>

          <div class="dash-bookings-info--right col-md-3">
            <p>Owner: <%= x.boat.user.user_name %></p>
            <p>Renter: <%= x.user.user_name %></p>
          </div>


          <div class="edit_booking col-md-2">
            <%= link_to boat_path(x.boat) do %>
              <button class="option_button">View</button>
            <% end %>

            <%= link_to edit_boat_booking_path(x.boat, x) do %>
              <button class="option_button">Edit</button>
            <% end %>
          </div>

        <% end %>
        </div>
      </div>

  <% else %>
    <h2>You don't have any bookings to display.</h2>
  <% end %>

  <div class="magical-line"></div>

  <% if @my_boats.count > 0 %>

    <h3>All of My Boats:</h3>

  <% @my_boats.each do  |x| %>
  <div class="">

      <div class="dash-bookings-info--left col-md-4">
        <p>Boat Name: <%= x.name %></p>
      </div>

      <div class="dash-bookings-info--center col-md-6">
        <p>Location: <%= x.location %></p>
      </div>

      <div class="edit_booking col-md-2">
        <%= link_to boat_path(x) do %>
          <button class="option_button">View</button>
        <% end %>

        <%= link_to edit_boat_path(x) do %>
          <button class="option_button">Edit</button>
        <% end %>
      </div>

    <% end %>
  </div>
  <% else %>
    <h2>You have no boats.</h2>
 <% end %>
</div>










