<h1>Boats#index</h1>
<p>Find me in app/views/boats/index.html.erb</p>

<div class="wrapping">
  <div class="title">
    <h1>All of our boats!</h1>
  </div>

  <div class="new_boat">
    <%= link_to new_boat_path do %>
        <button type="button" class="btn btn-success">Add a boat</button>
        <% end %>
  </div>

  <div class="container">
    <div class="row">
      <% @boats.each do |boat| %>
        <%= link_to boat_path(boat) do %>
          <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="card" style="background-image: url(<%= image_path("boat.jpg")%>;">
              <h3><%= boat.name%></h3>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>


