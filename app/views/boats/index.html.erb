<div class="wrapper">
  <div class="title">
    <h1>All of our boats!</h1>
  </div>

  <div class="container">
    <div class="row">
      <% @boats.each do |boat| %>
        <%= link_to boat_path(boat) do %>
            <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
              <div class="card_border">
                <div class="card" style="background-image: url(<%= boat.photo %>;">
                  <div class="nav_wheel" style="background-image: url(<%= image_path("nav_wheel.png")%>;">
                  </div>
                    <div class="location">
                      <h3><%= boat.name.capitalize %></h3>
                    </div>
                </div>
                <div class="boat_details">
                  <div class="main">
                    <p><%= boat.boat_type.capitalize %></p>
                    <p><%= boat.price %>$ per day</p>
                  </div>
                  <div class="details">
                    <p>Capacity:  <%= boat.capacity %></p>
                  </div>
                </div>
              </div>
            </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

